<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.petersomersby.connhome.Activitys.AddFavoritesActivity">

    <EditText
        android:id="@+id/input_scenarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="14dp"
        android:focusable="false"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:inputType="textPersonName"
        android:text="Select scenarios" />

    <EditText
        android:id="@+id/input_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_scenarios"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="14dp"
        android:focusable="false"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:inputType="textPersonName"
        android:text="Select Devices" />

    <Button
        android:layout_below="@+id/input_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveFavorites"
        android:text="Save"/>

</RelativeLayout>
